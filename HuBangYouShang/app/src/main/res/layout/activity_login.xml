<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_login_bg"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_default_head_portrait"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="@dimen/dimen_18"
            android:textColor="@color/color_while"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:id="@+id/et_login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:background="@drawable/shape_login_edittext_bg"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@mipmap/img_telephone"
            android:paddingLeft="12dp"
            android:drawablePadding="14dp"
            android:text="15911047043"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_14"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:background="@drawable/shape_login_edittext_bg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@mipmap/img_pwd"
            android:paddingLeft="12dp"
            android:drawablePadding="14dp"
            android:text="15911047043"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_14"
            android:inputType="textPassword"
            android:maxLines="1"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_login_bg"
            android:text="登陆"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机快速注册"
                android:textColor="@color/color_while"
                android:textSize="@dimen/dimen_15"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:textColor="@color/color_while"
                android:textSize="@dimen/dimen_15"
                android:gravity="right"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="其他登陆方式"
            android:textSize="@dimen/dimen_15"
            android:textColor="@color/color_while"
            android:gravity="center"
            android:drawableLeft="@mipmap/img_login_border_left"
            android:drawableRight="@mipmap/img_login_border_right"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/color_while"
                android:drawableTop="@drawable/selector_wetchar"
                android:drawablePadding="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/color_while"
                android:drawableTop="@drawable/selector_qq"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/color_while"
                android:drawableTop="@drawable/selector_weibo"
                android:drawablePadding="10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="随便看看"
            android:textSize="@dimen/dimen_15"
            android:textColor="@color/color_while"
            android:gravity="center"
            />

    </LinearLayout>

</ScrollView>