<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:showDividers="middle|end">

    <include layout="@layout/layout_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_margin="10dp"
            android:background="@color/color_3a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商家名称"
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="描述：5.0\t\t服务：5.0\t\t物流：5.0"
                android:textColor="@color/color_fa"
                android:textSize="@dimen/dimen_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="主要经营：女装\t上衣\t外套"
                android:textColor="@color/color_bf"
                android:textSize="@dimen/dimen_12" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="所在地" />

        <TextView
            style="@style/style_coupon_details_text_right"
            android:text="浙江宁波" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="好评" />

        <TextView
            style="@style/style_coupon_details_text_right"
            android:text="100%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="投诉" />

        <TextView
            style="@style/style_coupon_details_text_right"
            android:text="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="联系方式" />

        <TextView
            style="@style/style_coupon_details_text_right"
            android:text="4001231234" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="额度" />

        <TextView
            style="@style/style_coupon_details_text_right"
            android:text="满200减50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="有效期" />

        <TextView
            style="@style/style_coupon_details_text_right"
            android:text="2016.11.11-2016.12.12" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal">

        <TextView
            style="@style/style_coupon_details_text_left"
            android:text="交易价格" />

        <EditText
            style="@style/style_coupon_details_text_right"
            android:hint="请输入交易需要的帮赏分数值"
            android:textColor="@color/color_bf"
            android:textColorHint="@color/color_bf"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_bg"
        android:text="我要交易"
        android:textColor="@color/color_while"
        android:textSize="@dimen/dimen_15" />

</LinearLayout>